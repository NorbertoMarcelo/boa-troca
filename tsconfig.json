{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "removeComments": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@apis/*": [
        "./src/apis/*"
      ],
      "@configs/*": [
        "./src/configs/*"
      ],
      "@database/*": [
        "./src/database/*"
      ],
      "@errors/*": [
        "./src/errors/*"
      ],
      "@middlewares/*": [
        "./src/middlewares/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@tests/*": [
        "./src/tests/*"
      ],
      "@types/*": [
        "./src/types/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}